<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <LinearLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:background="@drawable/poweroff"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/img"
            android:layout_marginTop="30dp">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/profil"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/profileName"
            android:textSize="15sp"
            android:textColor="@color/blackcolor"
            android:textStyle="bold"
            android:layout_width="280dp"
            android:layout_height="25dp"
            android:text="Your Name"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:paddingTop="8dp"
            android:textAlignment="center"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/profileEmail"
            android:textSize="13sp"
            android:textColor="@color/blackcolor"
            android:layout_width="280dp"
            android:layout_height="25dp"
            android:text="Your email address"
            android:layout_gravity="center"
            android:paddingTop="4dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/profileNumber"
            android:textSize="13sp"
            android:textColor="@color/blackcolor"
            android:layout_width="280dp"
            android:layout_height="25dp"
            android:text="Phone Number"
            android:layout_gravity="center"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/img"
            android:layout_marginTop="30dp">

            <FrameLayout
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:background="@drawable/frame">

                <TextView
                    android:id="@+id/txtBB"
                    android:paddingTop="10dp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:paddingLeft="10dp"
                    android:textSize="20sp"
                    android:textColor="@color/blackcolor"
                    />

                <TextView
                    android:id="@+id/txtTB"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="110dp"
                    android:paddingTop="10dp"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textColor="@color/blackcolor"
                    />

                <TextView
                    android:id="@+id/txtBMI"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="215dp"
                    android:paddingTop="10dp"
                    android:textAlignment="center"

                    android:textSize="20sp"
                    android:textColor="@color/blackcolor"
                    />

                <TextView
                    android:id="@+id/BB"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="BB"
                    android:layout_marginTop="40dp"
                    android:textAlignment="center"
                    android:paddingLeft="10dp"
                    android:textSize="16sp"
                    />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="110dp"
                    android:text="TB"
                    android:layout_marginTop="40dp"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="215dp"
                    android:text="BMI"
                    android:layout_marginTop="40dp"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/txtstatus"
                    android:paddingTop="10dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"

                    android:textAlignment="center"
                    android:paddingLeft="10dp"
                    android:textSize="20sp"
                    android:textColor="@color/blackcolor"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:layout_marginTop="120dp"
                    android:layout_marginStart="110dp"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    />

                <TextView
                    android:id="@+id/countStatus"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="150dp"
                    android:layout_marginStart="110dp"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    />
            </FrameLayout>

        </LinearLayout>

        <Button
            android:id="@+id/perhitungan"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="PERHITUNGAN"
            android:textColor="@color/lightwhite"
            android:background="@drawable/joinbtn"
            />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/piechart"
                android:layout_width="105dp"
                android:layout_height="124dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/card_user">
                <ImageView
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:background="@drawable/piechart"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="11dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Data \nPie Chart"
                    android:textSize="10dp"
                    android:layout_marginTop="85dp"
                    android:gravity="center"
                    android:textColor="@android:color/black"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/history"
                android:layout_width="105dp"
                android:layout_height="124dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/card_user">
                <ImageView
                    android:layout_height="68dp"
                    android:layout_width="92dp"
                    android:background="@drawable/history"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="8dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="History \nPerhitungan"
                    android:textSize="10dp"
                    android:layout_marginTop="85dp"
                    android:gravity="center"
                    android:textColor="@android:color/black"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/edukasi"
                android:layout_width="105dp"
                android:layout_height="124dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/card_user">
                <ImageView
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:background="@drawable/edukasi"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="18dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edukasi dan \nBerita"
                    android:textSize="10dp"
                    android:layout_marginTop="85dp"
                    android:gravity="center"
                    android:textColor="@android:color/black"/>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>