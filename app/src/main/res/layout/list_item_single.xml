<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="3dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/custom_list_view">

        <TextView
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginStart="28dp"
            android:id="@+id/list_tanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#B5B5B5"/>
        <TextView
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="40sp"
            android:layout_marginTop="15dp"
            android:id="@+id/list_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_tanggal"
            android:textColor="#B1DBD1"/>

        <TextView
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginStart="50dp"
            android:layout_marginTop="15dp"
            android:id="@+id/list_bmi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_status"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>