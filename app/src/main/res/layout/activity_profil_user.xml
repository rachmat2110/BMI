<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgorund_user"
    tools:context=".profil_user">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_gravity="start"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:onClick="sign_out"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/power_off"/>

                <ImageView
                    android:onClick="dashboard"
                    android:layout_marginLeft="205dp"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/pertanyaan"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="60dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    >
                    <ImageView
                        android:id="@+id/profilImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profil"
                        android:onClick="handleImageClick"/>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:text="Edit Profil"
                    android:textSize="9sp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:background="@drawable/circleimage"
                    android:onClick="handleImageClick"/>

            </LinearLayout>

            <TextView
                android:id="@+id/profileName"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_width="280dp"
                android:layout_height="25dp"
                android:text="Noer Rachmat Octavianto"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:paddingTop="0dp"
                android:textAlignment="center"
                android:inputType="textEmailAddress"/>

            <LinearLayout
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_width="180dp"
                    android:layout_height="65dp"
                    android:background="@drawable/card_view">

                    <TextView
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tinggi Badan Kamu"
                        android:textColor="@android:color/black"
                        android:textSize="11sp"/>

                    <TextView
                        android:id="@+id/txtTB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:text="170"
                        android:textColor="@color/green"
                        android:textSize="20sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_width="180dp"
                    android:layout_height="65dp"
                    android:background="@drawable/card_view">

                    <TextView
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Berat Badan Kamu"
                        android:textColor="@android:color/black"
                        android:textSize="11sp"/>

                    <TextView
                        android:id="@+id/txtBB"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="70"
                        android:textColor="@color/green"
                        android:textSize="20sp"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:background="@drawable/card_view">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Kalkulasi BMI"
                    android:textColor="@color/text_bmi" />

                <TextView
                    android:id="@+id/txtBMI"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="40dp"
                    android:layout_width="270dp"
                    android:layout_height="50dp"
                    android:background="@drawable/card"
                    android:text="24.22"
                    android:gravity="center"
                    android:textSize="22sp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Klasifikasi BMI"
                    android:textColor="@color/text_bmi"
                    android:gravity="center"
                    android:layout_marginTop="30dp"/>

                <TextView
                    android:id="@+id/txtstatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="OBESITAS II"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:layout_marginTop="5dp" />

            </LinearLayout>

            <Button
                android:onClick="perhitungan"
                android:id="@+id/perhitungan"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="PERHITUNGAN"
                android:textColor="@android:color/white"
                android:background="@drawable/joinbtn"
                />

            <LinearLayout
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:onClick="piechart"
                    android:layout_gravity="center"
                    android:id="@+id/piechart"
                    android:layout_width="105dp"
                    android:layout_height="124dp"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/card_user">
                    <ImageView
                        android:layout_height="60dp"
                        android:layout_width="60dp"
                        android:background="@drawable/piechart"
                        android:layout_marginStart="22dp"
                        android:layout_marginTop="11dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Data \nPie Chart"
                        android:textSize="12dp"
                        android:layout_marginTop="85dp"
                        android:gravity="center"
                        android:textColor="@android:color/black"/>
                </RelativeLayout>

                <RelativeLayout
                    android:onClick="history"
                    android:id="@+id/history"
                    android:layout_width="105dp"
                    android:layout_height="124dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/card_user">
                    <ImageView
                        android:layout_height="68dp"
                        android:layout_width="92dp"
                        android:background="@drawable/history"
                        android:layout_marginStart="7dp"
                        android:layout_marginTop="8dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="History \nPerhitungan"
                        android:textSize="12dp"
                        android:layout_marginTop="85dp"
                        android:gravity="center"
                        android:textColor="@android:color/black"/>
                </RelativeLayout>

                <RelativeLayout
                    android:onClick="edukasi"
                    android:id="@+id/edukasi"
                    android:layout_width="105dp"
                    android:layout_height="124dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/card_user">
                    <ImageView
                        android:layout_height="50dp"
                        android:layout_width="50dp"
                        android:background="@drawable/edukasi"
                        android:layout_marginStart="27dp"
                        android:layout_marginTop="18dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Edukasi dan \nBerita"
                        android:textSize="12dp"
                        android:layout_marginTop="85dp"
                        android:gravity="center"
                        android:textColor="@android:color/black"/>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:onClick="berat_ideal"
                android:id="@+id/card_berat_ideal_"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_width="381dp"
                android:layout_height="130dp"
                android:background="@drawable/card_berat_ideal_">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Berat Ideal Anda"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ketuk Laman Ini"
                        android:textColor="#797070"/>

                </LinearLayout>

                <ImageView
                    android:layout_gravity="center"
                    android:layout_marginStart="60dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/gender"/>

            </LinearLayout>

            <LinearLayout
                android:onClick="target_berat"
                android:id="@+id/card_berat_badan"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_width="381dp"
                android:layout_height="130dp"
                android:background="@drawable/card_berat_badan">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Target Berat Anda"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ketuk Laman Ini"
                        android:textColor="@android:color/white"/>

                </LinearLayout>

                <ImageView
                    android:layout_gravity="center"
                    android:layout_marginStart="50dp"
                    android:layout_width="87dp"
                    android:layout_height="87dp"
                    android:background="@drawable/gendut"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>